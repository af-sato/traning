<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.membersite.model.mapper.UserMapper">

	<select id="findByIdAndPassword" resultType="com.example.membersite.model.domain.User">
		SELECT * FROM user WHERE id = #{id} AND password = #{password}
	</select>
	
	<delete id="deletedById" resultType="int">
		DELETE FROM user WHERE id = #{id}
	</delete>
	
	<insert id="insert" resultType="int">
		INSERT INTO user (id,password,name,age,mailaddress)
		values (#{id},#{password},#{name},#{age},#{mailaddress})
	</insert>
</mapper>